<br />
<h2>Search</h2>
<div class="text-center">
<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :content %>
      <%= f.select :model, options_for_select([['User'], ['Post']]) %>
      <%= f.select :method, options_for_select([["Perfect","perfect_match"], ["Forward","forward_match"],  ["Backward","backward_match"], ["Partial","partial_match"]]) %>
      <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.hidden_field :model, :value => "tag"  %>
    <%= f.hidden_field :method, :value => "perfect" %>
    <%= f.submit 'Tag Search', class:"btn btn-primary" %>
  <% end %>
<% end %>
<br />
<% if @model == "User" %>
  <% @records.each do |record| %>
    <%= image_tag record.get_profile_image(200, 200) %>
    <%= link_to record.name, user_path(record.id) %>
    <%= record.introduction %>
  <% end %>
<% else %>
  <% @records.each do |record| %>
    <%= image_tag record.user.get_profile_image(200, 200) %>
    <%= link_to record.title, post_path(record.id) %>
    <%= record.body %>
  <% end %>
<% end %>
</div>
</div>