<br />
<%# if user_signed_in? %>
  <%#= form_with url: search_path, method: :get, local: true do |f| %>
    <%#= f.text_field :content %>
    <%#= f.select :model, options_for_select({ "User" => "user", "Post" => "post" }) %>
    <%#= f.select :method, options_for_select({ "Perfect" => "perfect", "Forward" => "forward", "Backward" => "backward", "Partial" => "partial" }) %>
    <%#= f.submit 'Search', class:"btn btn-info" %>
  <%# end %>
<%# end %>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
