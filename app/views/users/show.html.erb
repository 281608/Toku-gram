<div class='container px-5 px-sm-0'>
 <div class='row'>
 <div class='col-md-3'>
<br />
 <h2 class="text-left">User info</h2>

<br />
<div class="text-left">
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<br />
 <h2 class="text-left">Name</h2>
  <div class="text-left">
   <%= @user.name %>
  </div>

<br />
　<h2 class="text-left">Introduction</h2>
  <div class="text-left">
   <%= @user.introduction %>
  </div>

<br />
<div class="text-left">
  <%= link_to "User_Edit", edit_user_path, class:"btn btn-success" %>
</div>

<br />
 <h2 class="text-left">want to post</h2>
<div class="left">
<%= link_to "Post Plus", new_post_path , class:"btn btn-primary" %>
</div>

 </div>

<div class='col-md-8 offset-md-1'>
　<h2 class="text-center">Posts</h2>
　<table class='table table-hover table-inverse'>
  <thead>
  <tr>
  <th></th>
  <th></th>
  <th></th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
  <tr>
  <td>
     <%= link_to user_path(post.user.id) do %>
         <%= image_tag post.user.get_profile_image(80, 80) %>
         <% end %>
  </td>
   <td><%= link_to post.title, post_path(post.id) %></td>
    <td><%= post.body %></td>
</tr>
  <% end %>
  </tbody>
 </table>
</div>
 </div>
 </div>
