<div class='col-md-10'>
<br />
<h2>Users</h2>
<br />
<table class= "table">
  <tbody>
    <thead>
    <tr>
    <th></th>
    <th>Name</th>
    <th>Introduciton</th>
    </tr>
    </thead>
<% @users.each do |user| %>
   <tr>
     <% if user.profile_image.attached? %>
       <td><%= image_tag user.get_profile_image(80, 80) %></td>
     <%else%>
      <td><%= image_tag "default-image.jpg" %></td>
     <%end%>
     <td><%= user.name %></td>
     <td><%= user.introduction %></td>
    <td><%= link_to "Show" ,user_path(user.id)  %></td>
    </tr>
<% end %>
    </tbody>
    </table>
</div>
