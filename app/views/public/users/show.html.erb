<div class='container px-5 px-sm-0'>
 <div class='row'>
 <div class='col-md-3'>
<br />
 <h2 class="text-left">User info</h2>

<br />
<div class="text-left">
  <%= image_tag @user.get_profile_image(120,120) %>
</div>

<br />
 <h2 class="text-left">Name</h2>
  <div class="text-left">
   <%= @user.name %>
  </div>

<br />
　<h2 class="text-left">Introduction</h2>
  <div class="text-left">
   <%= @user.introduction %>
  </div>

<br />
<div class="text-left">
  <%= link_to "User_Edit", edit_user_path, class:"btn btn-success" %>
</div>

<br />
 <h2 class="text-left">Posting</h2>
<div class="left">
<%= link_to "Post Plus", new_post_path , class:"btn btn-primary" %>
</div>

 </div>

<div class='col-md-8'>
　<h2 class="text-center">Posts</h2>
　<table class='table table-hover table-inverse'>
  <thead>
  <tr>
  <th></th>
  <th></th>
  <th>Tag</th>
  <th>Title</th>
  <th>Good</th>
  <th></th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
  <tr>
  <td><%= l post.created_at, format: :ymd %></td>
  <td>
    <% if post.image.attached? %>
     <%= image_tag post.image, size: "200x200" %>
    <% end %>
  </td>
  <td>
   <% if post.category.present? %>
    <%=link_to post.category,tagsearches_search_path(content:post.category)%>
   <% end %>
  </td>
  <td><%= link_to post.title, post_path(post.id) %></td>
  <td><%= render "goods/btn", post: post %></td>
</tr>
  <% end %>
  </tbody>
 </table>
</div>
 </div>
 </div>
