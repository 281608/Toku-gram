<div class='col-md-12'>
<br />
<h2>Posts</h2>
<br />
<table class='table table-hover table-inverse'>
  <thead>
   <tr>
      <th></th>
      <th>Name</th>
      <th></th>
      <th>Tag</th>
      <th>Title</th>
      <th>Content</th>
      <th>Good</th>
      <th>Comment</th>
      <th>Status</th>
   </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= l post.created_at, format: :ymd %></td>
      <td><%= post.user.name %></td>
       <td>
        <% if post.image.attached? %>
          <%= image_tag post.image, size: "200x200" %>
        <% end %>
       </td>
       <td>
　　     <% if post.category.present? %>
　　　　  <%=link_to post.category,tagsearches_search_path(content:post.category)%>
　　    <% end %>
      </td>
       <td><%= link_to post.title, post_path(post.id) %></td>
     <td><%= post.body %></td>
     <td><%= render "public/goods/btn", post: post %></td>
     <td>Comments: <%= post.post_comments.count %></td>
     <td><%= post.status_i18n %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

