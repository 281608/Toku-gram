<br />
<h2 class="text-center">Post detail</h2>
<br />
<div class='col-md-12'>
<table class='table'>
 <thead>
  <tr>
   <th></th>
   <th></th>
   <th>Tag</th>
   <th>Title</th>
   <th>Content</th>
   <th>Good</th>
   <th>Comment</th>
   <th>Status</th>
  </tr>
 </thead>
 <tbody>
  <tr>
   <td><%= l(@post.created_at, format: :long) %></td>
   <td>
    <% if @post.image.attached? %>
     <%= image_tag @post.image, size: "200x200" %>
    <% end %>
   </td>
   <td>
    <% if @post.category.present? %>
　  <%= @post.category %>
　  <% end %>
   </td>
   <td><%= link_to @post.title, post_path(@post.id) %></td>
   <td><%= @post.body %></td>
   <td><%= render "public/goods/btn", post: @post %></td>
   <td>Comments: <%= @post.post_comments.count %></td>
   <td><%= @post.status_i18n %></td>
     <% if @post.user == current_user %>
   <td><%= link_to "Edit" , edit_post_path(@post.id), class:"btn btn-success" %></td>
   <td>
   <%= link_to "Destroy", post_path(@post.id), method: :delete, data:{confirm: 'Do you really want to delete this?'}, class: "btn btn-sm btn-danger" %>
   </td>
 <% end %>
  </tr>
 </tbody>
</table>
</div>

<%= render "public/post_comments/index", post: @post %>
<%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>
