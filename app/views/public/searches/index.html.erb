
<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
<br />
  <h2>Users search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100, 100) %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Content</th>

      </tr>
    <tbody>
<br />
    <h2>Posts search for "<%= @word %>"</h2>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to user_path(post.user) do %>
          <% if post.image.attached? %>
          <%= image_tag post.image, size: "200x200" %>
        <% end %>
          <% end %>
        </td>
        <td><%= link_to post.title , post_path(post.id) %></td>
        <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>