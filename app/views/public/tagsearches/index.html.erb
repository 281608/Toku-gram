<div class='col-md-12'>
<table class='table table-hover table-inverse'>
<br />
  <h2><%= @model %>s search for "<%= @word %>"</h2>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Name</th>
      <th>Tag</th>
      <th>Title</th>
      <th>Content</th>
      <th>Good</th>
      <th>Comment</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= l post.created_at, format: :ymd %></td>
        <td> <% if post.image.attached? %>
          <%= image_tag post.image, size: "100x100" %>
        <% end %>
        </td>
        <td><%= post.user.name %></td>
        <td>
          <% if post.category.present? %>
            <%=link_to post.category,tagsearches_search_path(content: post.category)%>
          <% end %>
          </td>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
        <td class=<%= "good-" + post.id.to_s %> >
            <%= render "public/goods/btn", post: post %>
        </td>
        <td>Comments:<%= post.post_comments.count %></td>
        <td><%= post.status_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>