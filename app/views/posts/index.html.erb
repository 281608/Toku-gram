<div class='col-md-8 offset-md-1'>
<br />
<h2>Posts</h2>
<br />
<table class='table table-hover table-inverse'>
  <thead>
   <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
       <td>
         <%= link_to user_path(post.user.id) do %>
         <%= image_tag post.user.get_profile_image(80, 80) %>
         <% end %>
       </td>
       <td>
　　     <% if @post.category.present? %>
　　　　<%=link_to@post.category,tagsearches_search_path(content:@post.category)%>
　　    <% end %>
      </td>
       <td>
         <%= post.user.name %>
       </td>
       <td><%= link_to post.title, post_path(post.id) %></td>
     <td><%= post.body %></td>
     <td><%= render "goods/btn", post: post %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

