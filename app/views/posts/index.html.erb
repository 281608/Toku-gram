<div class='col-md-8 offset-md-1'>
<h2>投稿一覧</h2>
<table class='table table-hover table-inverse'>
  <thead>
   <tr>
    <th></th>
    <th>タイトル</th>
    <th></th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
       <td>
         <%= link_to user_path(post.user.id) do %>
         <%= image_tag post.user.get_profile_image(80, 80) %>
         <% end %>
       </td>
       <td><%= link_to post.title, post_path(post.id) %></td>
     <td><%= post.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

