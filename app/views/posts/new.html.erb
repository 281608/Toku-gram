<br />
<div class="p-1 mb-5 bg-info text-white">
 <h2 class="text-center">Post</h2>
<% if @post.errors.any? %>
  <%= @post.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @post, url: '/posts', method: :post do |f| %>
<br />
 <h2 class="text-center">Category</h2>
  <div class="text-center">
  <%= f.text_field :category %>
  </div>
<br />
 <h2 class="text-center">Title</h2>
  <div class="text-center">
   <%= f.text_field :title %>
  </div>
<br />
 <h2 class="text-center">Image</h2>
  <div class="text-center">
   <%= f.file_field :image, accept: "image/*" %>
  </div>
<br />
 <h2 class="text-center">Contents</h2>
  <div class="text-center">
   <%= f.text_area :body, rows:'5', class: "w-50" %>
  </div>
<br />
  <div class='d-flex justify-content-center'>
   <div class="text-center">
    <%= f.radio_button :status, 'published' %>
    <%= f.label :status, "公開", value: 'published' %>
   </div>
   <div class="text-center">
    <%= f.radio_button :status,'draft' %>
    <%= f.label :status, "非公開", value: 'draft' %>
   </div>
  </div>
<br />
  <div class="text-center">
   <%= f.submit 'Post', class:"btn btn-success" %>
  </div>
<% end %>


