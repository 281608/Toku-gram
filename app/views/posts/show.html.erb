<br />
<h2 class="text-center">Post detail</h2>
<br />
<table class='table'>
<tr>
 <td>
　　<% if @post.category.present? %>
　　　　<%=link_to@post.category,tagsearches_search_path(content:@post.category)%>
　　<% end %>
 </td>
 <td>
 <%= link_to(@post.user) do %>
 <%= image_tag @post.user.get_profile_image(100, 100) %><br>
 <%= @post.user.name %>
 <% end %>
 </td>
 <td><%= link_to @post.title, post_path(@post.id) %></td>
 <td><%= @post.body %></td>
 <td><%= render "goods/btn", post: @post %></td>
  <% if @post.user == current_user %>
 <td><%= link_to "Edit" , edit_post_path(@post.id), class:"btn btn-success" %></td>
 <td>
  <%= link_to "Destroy", post_path(@post.id), method: :delete, data:{confirm: 'Do you really want to delete this?'}, class: "btn btn-sm btn-danger" %>
 </td>
 <% end %>
</tr>
</table>
