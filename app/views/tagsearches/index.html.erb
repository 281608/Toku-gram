<table class='table table-hover table-inverse'>
<br />
  <h2><%= @model %>s search for "<%= @word %>"</h2>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Content</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.user do %>
          <%= image_tag post.user.get_profile_image(50, 50) %>
          <% end %>
        </td>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
        <td>
          <% if post.category.present? %>
            <%=link_to post.category,tagsearches_search_path(content: post.category)%>
          <% end %>
          </td>
        <td class=<%= "good-" + post.id.to_s %> >
            <%= render "goods/btn", post: post %>
        </td>
        <td><p>Comments:<%= post.post_comments.count %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>