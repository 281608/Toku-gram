<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Comment</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% post.post_comments.each do |post_comment| %>
      <tr>
        <td>
          <%= link_to user_path(post_comment.user) do %>
            <%= post_comment.user.name %>
          <% end %>
        </td>
        <td><%= post_comment.comment %></td>
        <td>
          <% if post_comment.user == current_user %>
            <%= link_to "Comment_Destroy", post_post_comment_path(post, post_comment), method: :delete, class: "btn btn-danger pull-right" %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>